<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunsetbackground"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/arena_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/press_start_2p"
        android:onClick="onArenaBtnPress"
        android:text="Arena"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/actions_btn"
        app:layout_constraintEnd_toStartOf="@+id/actions_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/actions_btn" />

    <Button
        android:id="@+id/actions_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/press_start_2p"
        android:onClick="onActionBtnPress"
        android:text="Actions"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_listView" />

    <Button
        android:id="@+id/shop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/press_start_2p"
        android:onClick="onShopBtnPress"
        android:text="Shop"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/actions_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/actions_btn"
        app:layout_constraintTop_toTopOf="@+id/actions_btn" />

    <ProgressBar
        android:id="@+id/hunger_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="184dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:progressDrawable="@drawable/pet_status_progressbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/happy_progressBar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hunger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Hunger"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/hunger_progressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hunger_progressBar" />

    <ProgressBar
        android:id="@+id/thirst_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="184dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/pet_status_progressbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/happy_progressBar"
        app:layout_constraintTop_toBottomOf="@+id/hunger_progressBar" />

    <TextView
        android:id="@+id/thirst_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Thirst"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/thirst_progressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/thirst_progressBar" />

    <ProgressBar
        android:id="@+id/happy_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="184dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:progressDrawable="@drawable/pet_status_progressbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/happy_text"
        app:layout_constraintTop_toBottomOf="@+id/thirst_progressBar" />

    <TextView
        android:id="@+id/happy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Happiness"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/happy_progressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/happy_progressBar" />

    <ProgressBar
        android:id="@+id/fitness_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="184dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="100dp"
        android:progressDrawable="@drawable/pet_status_progressbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/happy_progressBar"
        app:layout_constraintTop_toBottomOf="@+id/happy_progressBar" />

    <TextView
        android:id="@+id/fitness_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Fitness"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/fitness_progressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fitness_progressBar" />

    <ListView
        android:id="@+id/shop_listView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <ListView
        android:id="@+id/actions_listView"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pet_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Coins:"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/money_amount_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fitness_text" />

    <TextView
        android:id="@+id/money_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="0"
        android:textColor="#00FF00"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/money_text"
        app:layout_constraintTop_toTopOf="@+id/money_text" />

    <TextView
        android:id="@+id/hunger_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="+0"
        android:textColor="#EDD70C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/hunger_progressBar"
        app:layout_constraintStart_toEndOf="@+id/hunger_progressBar"
        app:layout_constraintTop_toTopOf="@+id/hunger_progressBar" />

    <TextView
        android:id="@+id/thirst_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="+0"
        android:textColor="#EDD70C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/thirst_progressBar"
        app:layout_constraintStart_toEndOf="@+id/thirst_progressBar"
        app:layout_constraintTop_toTopOf="@+id/thirst_progressBar" />

    <TextView
        android:id="@+id/happy_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="+0"
        android:textColor="#EDD70C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/happy_progressBar"
        app:layout_constraintStart_toEndOf="@+id/happy_progressBar"
        app:layout_constraintTop_toTopOf="@+id/happy_progressBar" />

    <TextView
        android:id="@+id/fitness_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="+0"
        android:textColor="#EDD70C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/fitness_progressBar"
        app:layout_constraintStart_toEndOf="@+id/fitness_progressBar"
        app:layout_constraintTop_toTopOf="@+id/fitness_progressBar" />

    <TextView
        android:id="@+id/money_update_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/press_start_2p"
        android:text="+0"
        android:textColor="#EDD70C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/money_amount_text"
        app:layout_constraintStart_toEndOf="@+id/mainCoin_image"
        app:layout_constraintTop_toTopOf="@+id/money_amount_text" />

    <Button
        android:id="@+id/levelUp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/press_start_2p"
        android:onClick="onLevelUpBtnPress"
        android:text="Level Up"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/actions_btn"
        app:layout_constraintStart_toStartOf="@+id/actions_btn"
        app:layout_constraintTop_toBottomOf="@+id/actions_btn" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/levelUp_fragmentContainerView"
        android:name="com.example.pettomato.fragments.LevelUpFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/actions_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_text" />

    <ImageView
        android:id="@+id/mainCoin_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/coin_image"
        app:layout_constraintBottom_toBottomOf="@+id/money_amount_text"
        app:layout_constraintStart_toEndOf="@+id/money_amount_text"
        app:layout_constraintTop_toTopOf="@+id/money_amount_text"
        app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>